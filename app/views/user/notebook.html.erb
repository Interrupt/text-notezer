<!-- app/views/user/view.html.erb -->
<div id="main_container">
<% if @notebook != nil %>
<h1><%=h @notebook.name %></h1>
<h2>Shared by <%=h @viewing.name %></h2>
  <% if @notes != nil and @notes.length > 0 %>
    <% for note in @notes %>
  <%= render :partial => 'note_wrapper', :locals => { :note => note } %> 
    <% end %>
  <% else %>
  <%=h @viewing.name %></b> hasn't added any notes to this notebook yet.
  <% end %>
<% else %>
<h1>Sorry Dave, I can't let you do that</h1>
The notebook requested doesn't exist. How did you get here?
<br/><br/>
<% end %>
</div>
